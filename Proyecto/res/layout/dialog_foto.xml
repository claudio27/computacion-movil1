<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" android:layout_marginLeft="30dp" android:layout_marginRight="30dp"
            android:layout_marginTop="30dp" android:layout_marginBottom="30dp">
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView"/>
    </LinearLayout>
</RelativeLayout>